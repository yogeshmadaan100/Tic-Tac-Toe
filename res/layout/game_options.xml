     <LinearLayout    
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:gravity="left"
        android:padding="8dp">
	                    
	     
	    
	    <TextView 
			android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:textSize="18sp"
		    android:padding="8dp"
		    android:textColor="#FF000000"
		    android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
		    android:text="Select Difficulty"
		    />
	    
	    <com.rey.material.widget.RadioButton
            style="@style/RadioButtonDrawable"
            android:id="@+id/rb_easy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Easy  "
            android:textSize="14sp"
            android:checked="true"
            android:gravity="left"/>   
            
	    <com.rey.material.widget.RadioButton
            style="@style/RadioButtonDrawable"
            android:id="@+id/rb_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium"
            android:textSize="14sp"
            android:checked="false"
            android:gravity="left"/>   
            
	    <com.rey.material.widget.RadioButton
            style="@style/RadioButtonDrawable"
            android:id="@+id/rb_hard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expert "
            android:textSize="14sp"
            android:checked="false"
            android:gravity="left"/>   
	    
	    <TextView 
			android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:textSize="18sp"
		    android:padding="8dp"
		    android:textColor="#FF000000"
		    android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
		    android:text="Select Players"/>
	     <com.rey.material.widget.RadioButton
            style="@style/RadioButtonDrawable"
            android:id="@+id/rb_player1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 Player"
            android:textSize="14sp"
            android:checked="true"
            android:gravity="center_vertical"/>   
            
	    <com.rey.material.widget.RadioButton
            style="@style/RadioButtonDrawable"
            android:id="@+id/rb_player2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 Player"
            android:textSize="14sp"
            android:checked="false"
            android:gravity="center_vertical"/>   
	   
	</LinearLayout>
 <com.rey.material.widget.Button
