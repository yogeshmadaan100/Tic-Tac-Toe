<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="@dimen/activity_horizontal_margin"
    android:layout_gravity="center"
    android:background="#1e90ff">
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#d8d8d8"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_marginBottom="15dp">
     <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Players"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:textColor="@color/material_blue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:weightSum="2" >
         <com.rey.material.widget.Button
                style="@style/FlatColorButtonRippleStyle"
		        android:id="@+id/button_player1"
		        android:layout_width="0dp"
		        android:layout_height="50dp"
		        android:layout_weight="1"
		        android:textColor="#FF2196F3"
		        android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"
		        android:text="1 Player"
		        app:rd_delayClick="true"
		        android:layout_margin="2dp"
		        android:layout_marginBottom="20dp"
		        android:background="@null"/> 
		 <com.rey.material.widget.Button
                style="@style/FlatColorButtonRippleStyle"
		        android:id="@+id/button_player2"
		        android:layout_width="0dp"
		        android:layout_height="50dp"
		        android:layout_weight="1"
		        android:textColor="#FF2196F3"
		        android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"
		        android:text="2 Players"
		        app:rd_delayClick="true"
		        android:layout_margin="2dp"
		        android:background="@null"/>
       
    </LinearLayout>
</LinearLayout>
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:background="#d8d8d8"
       android:padding="10dp"
       android:layout_marginBottom="20dp">
       <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Difficulty"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:textColor="@color/material_blue"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:weightSum="3" >
         <com.rey.material.widget.Button
                style="@style/FlatColorButtonRippleStyle"
		        android:id="@+id/button_easy"
		        android:layout_width="0dp"
		        android:layout_height="50dp"
		        android:layout_weight="1"
		        android:textColor="#FF2196F3"
		        android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"
		        android:text="Easy"
		        app:rd_delayClick="true"
		        android:layout_margin="2dp"
		        android:background="@null"/> 
		 <com.rey.material.widget.Button
                style="@style/FlatColorButtonRippleStyle"
		        android:id="@+id/button_medium"
		        android:layout_width="0dp"
		        android:layout_height="50dp"
		        android:layout_weight="1"
		        android:textColor="#FF2196F3"
		        android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"
		        android:text="Medium"
		        app:rd_delayClick="true"
		        android:layout_margin="2dp"
		        android:background="@null"/>
        <com.rey.material.widget.Button
                style="@style/FlatColorButtonRippleStyle"
		        android:id="@+id/button_hard"
		        android:layout_width="0dp"
		        android:layout_height="50dp"
		        android:layout_weight="1"
		        android:textColor="#FF2196F3"
		        android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"
		        android:text="Hard"
		        app:rd_delayClick="true"
		        android:layout_margin="2dp"
		        android:background="@null"/>
    </LinearLayout>
   </LinearLayout>
    
 <com.rey.material.widget.Button
                style="@style/FlatColorButtonRippleStyle"
		        android:id="@+id/play"
		        android:layout_width="100dp"
		        android:layout_height="50dp"
		        android:textColor="#FF2196F3"
		        android:textSize="18sp"
		        android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"
		        android:text="Start"
		        app:rd_delayClick="true"
		        android:layout_margin="2dp"
		        android:layout_gravity="center"
		        android:layout_marginTop="40dp"
		        /> 
</LinearLayout>
